<div class="container">
  <div class="row">
    <div class="col-5 px-5 mx-auto">
      <h1>Editing Book</h1>
      <%= render partial: "layouts/errors", locals: { item: @book }%>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="book.body">Opinion</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <p>
        <%= link_to "Show", book_path(@book), method: :get %>
       |
        <%= link_to "Back", books_path, method: :get%>
      </p>
    </div>
  </div>
</div>