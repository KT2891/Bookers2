          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to root_path, class: "nav-link text-light" do %>
                <span class="fa fa-house"></span> Home
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path, class: "nav-link text-light" do%>
                <span class="fa fa-link"></span> About
